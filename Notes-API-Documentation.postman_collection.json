{
  "info": {
    "name": "Notes API Documentation",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"johndoe@example.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "register"
              ]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"johndoe@example.com\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "login"
              ]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/logout",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "logout"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Notes",
      "item": [
        {
          "name": "Get Notes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/notes",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "notes"
              ]
            }
          }
        },
        {
          "name": "Create Note",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My First Note\",\n  \"content\": \"This is the content of my note.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/notes",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "notes"
              ]
            }
          }
        },
        {
          "name": "Show Note",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/notes/:uuid",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "notes",
                ":uuid"
              ]
            }
          }
        },
        {
          "name": "Update Note",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Note\",\n  \"content\": \"Updated content of the note.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/notes/:uuid",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "notes",
                ":uuid"
              ]
            }
          }
        },
        {
          "name": "Soft Delete Note",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/notes/:uuid",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "notes",
                ":uuid"
              ]
            }
          }
        },
        {
          "name": "Restore Note",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/notes/:uuid/restore",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "notes",
                ":uuid",
                "restore"
              ]
            }
          }
        },
        {
          "name": "Force Delete Note",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/notes/:uuid/destroy",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "notes",
                ":uuid",
                "destroy"
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
